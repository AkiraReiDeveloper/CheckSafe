        </activity>
        <activity
            android:name=".RegistrarUsuario"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Scanner"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ConsultarUsuario"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ListarUsuarios"
            android:screenOrientation="portrait">
        </activity>
